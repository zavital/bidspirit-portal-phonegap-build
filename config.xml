<?xml version='1.0' encoding='utf-8'?>
<widget version="0.424"
    id="com.bidspirit.qa"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:gap="http://phonegap.com/ns/1.0"
    >
 
    <name>(Qa) Bidspirit</name>
    <description>
        The Bidspirit portal is your gate to the auction housesâ€™ arena  trading in art, collectibles, jewelry, antiques, stamps, coins, old books, judaica, and more
    </description>
    <author email="zemer@bidspirit.com" href="http://bidspirit.com">
        Zemer avital
    </author>

    <content src="index.html" />
    
    <access origin="*" />
    
    
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0"  />
    <gap:plugin name="br.com.paveisitemas.splashscreen" version="2.1.1" />
    
    
    
    <gap:platform name="android" />
    <gap:platform name="ios" />
    
    
    
        
    <icon src="icon.png" />
    
    
    
    
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name='phonegap-version' value='cli-5.1.1' />
    <preference name="EnableViewportScale" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    
    <gap:splash src="splash.png"/>
    
    
	<preference name="SplashScreen" value="splash" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	
	<platform name="android"> 
		<splash src="res/screen/android/splash.png" density="land-hdpi"/>
		<splash src="res/screen/android/splash.png" density="land-ldpi"/>
		<splash src="res/screen/android/splash.png" density="land-mdpi"/>
		<splash src="res/screen/android/splash.png" density="land-xhdpi"/> 
	</platform>
     
</widget>
